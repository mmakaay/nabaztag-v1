include core/constants

define $motor     R0
define $direction R1

@Ears.Off()
    PUSH 0x00000000, 0x00000011
    LD $direction, %STOP
    LD $motor, %MOTOR_LEFT 
    MOTOR $motor, $direction
    LD $motor, %MOTOR_RIGHT 
    MOTOR $motor, $direction
    WAIT 1
    PULL 0x00000000, 0x00000011
    RTS
