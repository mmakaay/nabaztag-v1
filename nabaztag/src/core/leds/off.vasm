import core/constants

$r          equ R0
$g          equ R1
$b          equ R2
$led        equ R3
$transition equ R5

@Core.Leds.Off()
    push R0 R1 R2 R3 R5

    clr $r
    clr $g
    clr $b

    ld $transition 5

    ld $led %LED_BOTTOM
    led $led $transition
    ld $led %LED_LEFT
    led $led $transition
    ld $led %LED_MIDDLE
    led $led $transition
    ld $led %LED_RIGHT
    led $led $transition
    ld $led %LED_NOSE
    led $led $transition

    pull last
    wait 1
    rts
