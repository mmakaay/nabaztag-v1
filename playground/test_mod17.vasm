# This is a unit test (yeah I know, in assembly) for the Math.DivMod17()
# subroutine. When te tests are running, the nose goes blue.
# On success, the nose goes green, red otherwise.

include core/constants
include core/math/divmod17
include core/leds/off

define $input      R0
define $div        R0
define $mod        R1
define $idx_hi     R3
define $idx_lo     R4
define $test_div   R5
define $test_mod   R6
define $test_val   R7
define $test_last  R8
define $color      R9
define $brightness R10
define $led        R11
define $transition R12

@Main
    BSR @Leds.Off()
    CLR $idx_hi
    CLR $idx_lo
    LD $test_last, 255

    # Turn nose blue to indicate that testing started.
    LD $color, %BLUE
    BSR @turn_led_on()
    WAIT 10

@next_test
    # Compute the div and mod for the next test case
    LDTW $test_val, @table.testcases
    LD $input, $test_val
    BSR @Math.DivMod17()

    # Check div outcome
    INCW $idx_hi, $idx_lo
    LDTW $test_div, @table.testcases
    CMP $div, $test_div
    BNE @fail

    # Check mod outcome
    INCW $idx_hi, $idx_lo
    LDTW $test_mod, @table.testcases
    CMP $mod, $test_mod
    BNE @fail

    # When at test case 255, we're done.
    CMP $test_last, $test_val
    BEQ @success

    # Go to the next test case.
    INCW $idx_hi, $idx_lo
    BRA @next_test

@success
    LD $color, %GREEN
    BSR @turn_led_on()
    BRA @end

@fail
    LD $color, %RED
    BSR @turn_led_on()
    BRA @end

@end
    WAIT 10
    BRA @end

@turn_led_on()
    LD $brightness, 255
    PALETTE $color, $brightness
    LD $led, %LED_NOSE
    LD $transition, 10
    LED $led, $transition
    WAIT 1
    RTS

