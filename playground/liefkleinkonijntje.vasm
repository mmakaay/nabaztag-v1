import core/idle
import core/leds/off
import core/leds/twinkle

music_file LIEF midi/liefkleinkonijntje.mid

@Main
    ld R0 255
    mvol R0
    ld R0 150
    vol R0

    ld R0 music_file:LIEF
    midiplay R0

@wait_for_end_of_midi
    bsr @Core.Leds.Twinkle()
    music R0
    tst R0
    bne @wait_for_end_of_midi
    bsr @Core.Leds.Off()

    bra @Core.Idle
